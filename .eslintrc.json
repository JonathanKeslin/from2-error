{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-extra-parens": [
      "error",
      "all"
    ],
    "curly": [
      "error",
      "multi",
      "consistent"
    ],
    "valid-jsdoc": "error",
    "consistent-return": "error",
    "no-else-return": "error",
    "no-multi-spaces": "error",
    "global-require": "error",
    "handle-callback-err": "error"
  }
}